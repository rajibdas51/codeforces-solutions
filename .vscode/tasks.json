{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run with I/O",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "C:\\msys64\\ucrt64\\bin\\g++.exe -std=c++17 -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" && \"${fileDirname}\\${fileBasenameNoExtension}.exe\" < \"${fileDirname}\\input.txt\" > \"${fileDirname}\\output.txt\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
